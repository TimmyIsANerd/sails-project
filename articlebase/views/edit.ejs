<nav aria-label="breadcrumb" class="m-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/articles/list">Articles</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<h1 class="display-4">Edit Article</h1>

<div class="container-fluid">
    <form method="post" action="/articles/update/<%= article.id %>">
        <div class="form-group m-3">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="<%= article.title %>">
        </div>
        <div class="form-group m-3">
            <label for="body">Body</label>
            <input type="text" name="body" class="form-control" value="<%= article.body %>">
        </div>
        <input type="submit" value="Submit" class="btn btn-secondary m-3">
    </form>
</div>

